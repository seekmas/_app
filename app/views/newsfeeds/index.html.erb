<div class="panel"><div class="panel-body">
<h1>Listing newsfeeds</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Active?</th>
      <th>Subject</th>
      <th>Enabled</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsfeeds.each do |newsfeed| %>
      <tr>
        <td><%= image_tag newsfeed.avatar.url(:thumb)%></td>
        <td><%= newsfeed.active%></td>
        <td><%= newsfeed.subject %></td>
        <td><%= newsfeed.enabled %></td>
        <td><%= newsfeed.order_id %></td>
        <td><%= link_to 'Show', newsfeed %></td>
        <td><%= link_to 'Edit', edit_newsfeed_path(newsfeed) %></td>
        <td><%= link_to 'Destroy', newsfeed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Newsfeed', new_newsfeed_path %>
</div></div>