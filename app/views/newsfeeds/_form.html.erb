<%= simple_form_for(@newsfeed) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :active %>
    <%= f.input :avatar , :label => 'Cover' %>
    <%= f.cktext_area :content %>
    <%= f.input :enabled %>
    <%= f.input :order_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
