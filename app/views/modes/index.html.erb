<div class="panel"><div class="panel-body">
<h1>Listing modes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modes.each do |mode| %>
      <tr>
        <td><%= mode.subject %></td>
        <td><%= link_to 'Show', mode %></td>
        <td><%= link_to 'Edit', edit_mode_path(mode) %></td>
        <td><%= link_to 'Destroy', mode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mode', new_mode_path %>
</div></div>